# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# JWT Secret Key (use a strong random string in production)
JWT_SECRET_KEY=your-secret-key-here-change-in-production

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Hugging Face API (for chatbot)
HUGGING_FACE_API_KEY=your-hugging-face-token-here
HUGGING_FACE_MODEL=openai/gpt-oss-20b

# Mailgun (for email sending)
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-mailgun-domain

# Stripe (for payments)
STRIPE_SECRET_KEY=your-stripe-secret-key

# Server Port (optional, defaults to 5001)
PORT=5001

# Admin User Setup (for createAdmin.js script - optional)
# ADMIN_EMAIL=admin@admin.com
# ADMIN_PASSWORD=your-secure-password-here
# ADMIN_NAME=Admin User

